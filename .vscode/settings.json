{
    /*--------Theme configuration------------------*/
    "workbench.colorTheme": "Steam Classic",
        /*-------Color-------*/
    "workbench.colorCustomizations": {
        "debugConsole.sourceForeground": "#068f01",
        "terminal.background": "#000000",
        "terminal.foreground": "#068f01",
        "editor": "#068f01",
        "debugConsole.infoForeground": "#068f01"
    },

    "“terminal.external.osxExec”": "iTerm.app",
    "“terminal.integrated.shell.osx”": "/bin/zsh",
    "“terminal.integrated.fontFamily”": "'FixedSys Regular'",
    "debugConsole.integrated.FontFamily": "'FixedSys Regular'",


    "launch": 
    { 
        "configurations":[
            {       //Edge browser configuration
                "name": "crank dat soldja boi",
                "request": "launch",
                "type": "msedge",
                "url": "${workspaceFolder}",
                "file": "${workspaceFolder}/index.html",
                "webRoot": "${workspaceFolder}"
            }
        ]
    },
    "liveServer.settings.showOnStatusbar": true,
    "workbench.settings.openDefaultSettings": true
}
